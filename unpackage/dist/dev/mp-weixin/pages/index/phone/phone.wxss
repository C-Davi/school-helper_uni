}
.phone-name,.phone-value {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-flow: nowrap row;
            flex-flow: nowrap row;
    -webkit-box-pack: space-evenly;
    -webkit-justify-content: space-evenly;
            justify-content: space-evenly;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin: 2vw;
}
.phone-name>text:first-child,.phone-value>text:first-child {
    width: 20vw;
}
.phone-name>text:last-child,.phone-value>text:last-child {
    width: 50vw;
    font-family: 'webfont';
}
.note {
    position: absolute;
    right: 5vw;
    top: 2vw;
    font-size: 3vw;
    margin-left: 5vw;
    color: gray;
    line-height: 10vw;
}

