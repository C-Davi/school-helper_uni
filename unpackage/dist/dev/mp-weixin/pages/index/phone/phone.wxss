    margin-left: 5vw;
    font-size: 4vw;
    font-weight: bold;
    text-shadow: 2vw 2vw 3vw var(--primary);
}
.phone {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: nowrap column;
            flex-flow: nowrap column;
    -webkit-box-pack: space-evenly;
