page {
    overflow: hidden;
}
.tab {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    width: 100vw;
    height: 10vw;
    background-color: #fff;
    color: #333;
}
.tab-list {
    line-height: 10vw;
    width: 15vw;
    text-align: center;
}
.active {
    color: #000;
    font-weight: bold;
}
.region {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column nowrap;
            flex-flow: column nowrap;
    -webkit-box-pack: start;
    -webkit-justify-content: start;
            justify-content: start;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: 100vw;
    height: 70vw;
    background-color: #fff;
}
.region-list {
    position: relative;
    margin-left: 5vw;
    width: 90vw;
    height: 20vw;
    border-bottom: 4rpx solid gainsboro;
}
.region-list__pic {
    position: absolute;
    top: 4vw;
    width: 18vw;
    height: 12vw;
}
.region-list__name {
    position: absolute;
    left: 25vw;
    line-height: 20vw;
    font-size: 4vw;
}
.region-list__icon_share{
  position: absolute;
  right: 15vw;
  top: 7vw;
  width: 8vw;
  height: 8vw;
}
.region-list__share{
  width: 6vw;
  height: 6vw;
}
.region-list__icon {
    position: absolute;
    right: 0;
    top: 6vw;
    width: 8vw;
    height: 8vw;
}
.detail {
    position: absolute;
    bottom: 0;
    width: 100vw;
    height: 70vw;
    background-color: #f2f2f2;
}
.show-detail {
    -webkit-animation: show 0.5s ease-in both;
            animation: show 0.5s ease-in both;
}
@-webkit-keyframes show {
0% {
        -webkit-transform: translateY(65vw);
                transform: translateY(65vw);
}
100% {
        -webkit-transform: translate(0);
                transform: translate(0);
}
}
@keyframes show {
0% {
        -webkit-transform: translateY(65vw);
                transform: translateY(65vw);
}
100% {
        -webkit-transform: translate(0);
                transform: translate(0);
}
}
.hide-detail {
    -webkit-animation: hide 0.5s ease-out both;
            animation: hide 0.5s ease-out both;
}
@-webkit-keyframes hide {
0% {
        -webkit-transform: translate(0);
                transform: translate(0);
}
100% {
        -webkit-transform: translateY(65vw);
                transform: translateY(65vw);
}
}
@keyframes hide {
0% {
        -webkit-transform: translate(0);
                transform: translate(0);
}
100% {
        -webkit-transform: translateY(65vw);
                transform: translateY(65vw);
}
}
.detail-arrow {
    position: absolute;
    z-index: 10;
    top: 0;
    left: 45vw;
    width: 12vw;
    text-align: center;
    line-height: 4vw;
    border: .7vw solid #000;
    font-size: 5vw;
    border-top: none;
    background-color: var(--primary);
}
.detail-header {
    border-top: .7vw solid var(--primary);
    position: relative;
    height: 20vw;
    width: 100vw;
    background-color: #fff;
}
.detail-header__name {
    position: absolute;
    left: 5vw;
    line-height: 20vw;
    font-size: 6vw;
}
.detail-header__icon {
    position: absolute;
    right: 5vw;
    top: 6vw;
    width: 8vw;
    height: 8vw;
}
.detail-content {
    padding: 5vw;
}

