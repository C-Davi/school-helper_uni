.header {
    margin: 5vw auto 0;
    height: 25vw;
    width: 90vw;
}
button {
    box-shadow: 0 0 0 transparent;
}
.header::after {
    content: '';
    position: absolute;
    z-index: -1;
    top: 0;
    left: 0;
    width: 100vw;
    height: 40vw;
    -webkit-clip-path: polygon(0% 0%,100% 0%,100% 70%,0% 100%);
            clip-path: polygon(0% 0%,100% 0%,100% 70%,0% 100%);
    background-color: #2dc799;
}
.header-avatar {
    position: absolute;
    top: 5vw;
    left: 5vw;
    width: 20vw;
    height: 20vw;
    border-radius: 50%;
}
.header-avatar::after {
    content: '';
    position: absolute;
    top: -4.9vw;
    left: -4.95vw;
    width: 20vw;
    height: 20vw;
    border-radius: 50%;
    border: 5vw solid 2dc799;
    background-color: transparent;
}
.header-name {
    position: absolute;
    top: 7vw;
    left: 30vw;
    font-weight: bold;
}
.main {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column nowrap;
            flex-flow: column nowrap;
    -webkit-box-pack: start;
    -webkit-justify-content: flex-start;
            justify-content: flex-start;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.main-list {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column wrap;
            flex-flow: column wrap;
    -webkit-box-pack: start;
    -webkit-justify-content: start;
            justify-content: start;
    border-radius: 1.5vw;
    margin-top: 5vw;
    overflow: hidden;
    box-shadow: 0 0 2vw var(--shadow);
}
.main-list>button {
    border-bottom: .7vw solid #f2f2f2;
}
.main-list>button:last-child {
    border-bottom: none;
}
.main-list__item {
    position: relative;
    height: 15vw;
    width: 90vw;
    background-color: #fff;
}
.main-list__item>image {
    position: absolute;
    left: 5vw;
    top: 5vw;
    width: 5vw;
    height: 5vw;
}
.main-list__item>text {
    position: absolute;
    left: 15vw;
    line-height: 15vw;
    font-size: 4vw;
    color: #333;
}
.main-desc {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-flow: column nowrap;
            flex-flow: column nowrap;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    width: 80vw;
    padding: 5vw;
    margin: 5vw 0;
    border-radius: 1.5vw;
    box-shadow: 0 0 2vw var(--shadow);
    background-color: #fff;
}
.main-desc__logo {
    width: 12vw;
    height: 12vw;
}
.main-desc>text {
    font-size: 3.5vw;
    color: #666;
    line-height: 5vw;
}
.appid {
    color: var(--blue);
}

