.header {
    position: fixed;
    width: 100vw;
    left: 0;
    top: 0;
    line-height: 12vw;
    font-size: 4vw;
    background-color: #fff;
    text-align: center;
    border-bottom: .2vw solid gainsboro;
}

.all {
    margin-top: 12vw;
    width: 100vw;
    background-color: #fff;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-around;
    align-items: center;
    margin-bottom: 3vw;
    box-shadow: 0 1.5vw 2vw -1vw var(--primary);
}

.all-list {
    width: 30vw;
    height: 20vw;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-evenly;
    align-items: center;
}

.all-list__name {
    font-size: 4vw;
}

.all-list__score {
    font-size: 6vw;
    font-weight: bold;
    color: var(--blue);
}

.ranking {
    position: relative;
    margin: 0 auto 3vw;
    width: 2vw;
    height: 2vw;
    background-color: var(--primary);
    border-radius: 50%;
}

.ranking::before {
    content: '';
    position: absolute;
    left: -5vw;
    width: 2vw;
    height: 2vw;
    background-color: var(--primary);
    border-radius: 50%;
    animation: loading 1s infinite ease-in-out;
}

.ranking::after {
    content: '';
    position: absolute;
    right: -5vw;
    width: 2vw;
    height: 2vw;
    background-color: var(--primary);
    border-radius: 50%;
    animation: loading 1s infinite reverse ease-in-out;
}

@-webkit-keyframes loading {
    0% {
        transform: translateY(0vw);
    }

    25% {
        transform: translateY(1vw);
    }

    50% {
        transform: translateY(0);
    }

    75% {
        transform: translateY(-1vw);
    }
}

@keyframes loading {
    0% {
        transform: translateY(0vw);
    }

    25% {
        transform: translateY(1vw);
    }

    50% {
        transform: translateY(0);
    }

    75% {
        transform: translateY(-1vw);
    }
}

.ranked {
    font-size: 3.5vw;
    overflow: hidden;
    padding: 0 5vw;
    animation: show-rank 2s forwards cubic-bezier(0.68,-0.55,0.27,1.55);
}

@-webkit-keyframes show-rank {
    0% {
        height: 5vw;
        opacity: 0;
    }

    100% {
        opacity: 1;
        height: 12vw;
        padding-bottom: 2vw;
    }
}

@keyframes show-rank {
    0% {
        height: 5vw;
        opacity: 0;
    }

    100% {
        opacity: 1;
        height: 12vw;
        padding-bottom: 2vw;
    }
}

.course {
    width: 90vw;
    padding: 3vw;
    margin-bottom: 3vw;
    margin-left: 5vw;
    background-color: #fff;
    box-shadow: 0 1.5vw 2vw -1vw var(--blue);
    border-radius: 1vw;
}

.course-title {
    line-height: 10vw;
    font-size: 4.5vw;
}

.course-list {
    display: flex;
    flex-flow: row wrap;
    justify-content: space-between;
}

.course-list>text {
    line-height: 8vw;
    font-size: 3.5vw;
    border-bottom: .5vw dotted gainsboro;
    margin: 0 5vw;
}