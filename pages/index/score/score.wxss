.login {
    position: relative;
}

.login-logo {
    margin: 10vw 5vw 0;
    width: 90vw;
    height: 40vw;
    background-color: #fff;
    border-radius: 1vw;
}

.login-input {
    background-color: #fff;
    width: 90vw;
    margin: 10vw auto 0;
    height: 45vw;
    display: flex;
    flex-flow: column nowrap;
    justify-content: space-evenly;
    align-items: center;
}

.login-input__username,.login-input__password {
    width: 80vw;
    height: 10vw;
    border-radius: 1vw;
    border: .2vw solid #000;
    padding: 2vw;
    line-height: 14vw;
}

.login-btn {
    margin: 5vw auto 0;
    width: 35vw;
    line-height: 10vw;
    background-color: var(--primary);
    font-size: 5vw;
    font-weight: bold;
    box-shadow: 0 1.5vw 2vw -1vw #fde425;
}

.login-tips {
    font-size: 3vw;
    color: gray;
    padding: 5vw;
}