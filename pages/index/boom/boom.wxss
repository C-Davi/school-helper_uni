page {
    overflow: hidden;
}

button {
    border-radius: 5rpx;
    margin: 0;
    background-color: #fff;
}

.box {
    background: #fff;
    width: calc(100vw-40rpx);
    border: 10rpx solid gainsboro;
    border-radius: 10rpx;
}

.set-game {
    margin: 20rpx auto;
    width: 90vw;
    height: 30vw;
    text-align: center;
    line-height: 30vw;
    border-radius: 20rpx;
    border: 4rpx solid gainsboro;
    font-size: 50rpx;
}

.is-set-game {
    background-color: gainsboro;
}

.box-list {
    display: flex;
    flex-flow: row;
    margin-left: 3vw;
    width: 100vw;
    height: 10vw;
}

.box-list__item {
    margin: 1vw;
    font-weight: bold;
    font-size: 32rpx;
    text-align: center;
    width: 8vw;
    height: 8vw;
    background-color: gainsboro;
}

.bg-white {
    margin: 0.5vw;
    background-color: #fff;
    color: #fff;
    width: 9vw;
    height: 9vw;
    line-height: 9vw;
}

.footer {
    margin: 40rpx;
    display: flex;
    line-height: 50rpx;
    text-align: center;
    justify-content: space-around;
    align-items: center;
    font-size: 32rpx;
    color: black;
}

.footer-list {
    display: flex;
    flex-flow: nowrap column;
    justify-content: space-evenly;
    align-items: center;
}

.footer-list__icon {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 10rpx;
}

.footer-list__name {
    font-size: 26rpx;
    font-weight: 700;
}

.button-hover {
    background-color: LightGrey;
}

.tips {
    margin-top: 10px;
    text-align: center;
    font-size: 62.5%;
    color: #8d8d8d;
}

.bg-1 {
    background: #3b88c3;
}

.bg-2 {
    background: #3b88c3;
}

.bg-3 {
    background: #3b88c3;
}

.bg-4 {
    background: #3b88c3;
}

.bg-5 {
    background: #3b88c3;
}

.bg-6 {
    background: #3b88c3;
}

.bg-7 {
    background: #3b88c3;
}

.bg-8 {
    background: #3b88c3;
}

.rank {
    height: 70vh;
    overflow: scroll;
}

.rank-close {
    position: absolute;
    right: 30rpx;
    top: 30rpx;
    font-size: 36rpx;
}

.rank-header {
    padding: 80rpx 20rpx 30rpx;
    display: flex;
    flex-flow: row nowrap;
    justify-content: space-evenly;
    align-items: center;
}

.rank-header__title {
    margin-right: 50rpx;
    font-size: 60rpx;
    font-weight: bold;
}

.my-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.my-rank {
    line-height: 45rpx;
}

.rank-list {
    width: 100%;
    height: 150rpx;
    position: relative;
    border-bottom: 2rpx solid gainsboro;
}

.rank-list__rank {
    font-size: 36rpx;
    position: absolute;
    left: 25rpx;
    line-height: 150rpx;
    top: 0;
}

.rank-list__avatar {
    position: absolute;
    top: 15rpx;
    left: 80rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.rank-list__nickName {
    position: absolute;
    left: 240rpx;
    line-height: 150rpx;
    top: 0;
    width: 40vw;
    overflow: hidden;
    text-align: left;
}

[class*=rank-list__time] {
    position: absolute;
    right: 50rpx;
    top: 0;
    line-height: 150rpx;
    font-size: 54rpx;
}

.rank-list__time0 {
    color: red;
}

.rank-list__time1 {
    color: orange;
}

.rank-list__time2 {
    color: gold;
}