}

.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
}

.loading-logo {
    position: relative;
    width: 50vw;
    height: 50vw;
}

.loading-logo__main {
    width: 50vw;
    height: 50vw;
    clip-path: polygon(0% 100%,50% 0,100% 100%,75% 100%,50% 45%,25% 100%);
    background-color: #d43819;
    transform: rotateX(180deg);
    animation: show-a 3s forwards cubic-bezier(0.6,-0.28,0.735,0.045);
}

@-webkit-keyframes show-a {
    0% {
        opacity: 0;
        clip-path: polygon(0% 100%,0% 0%,0% 100%,100% 100%,75% 100%,50% 100%,25% 100%);
    }

    30% {
        clip-path: polygon(0% 100%,50% 0,100% 100%,75% 100%,50% 100%,25% 100%);
    }

    50% {
        transform: rotateX(180deg);
    }

    100% {
        opacity: 1;
        transform: rotateX(360deg);
        border-radius: 1vw;
        clip-path: polygon(0% 100%,50% 0,100% 100%,75% 100%,50% 45%,25% 100%);
    }
}

@keyframes show-a {
    0% {
        opacity: 0;
        clip-path: polygon(0% 100%,0% 0%,0% 100%,100% 100%,75% 100%,50% 100%,25% 100%);
    }

    30% {
        clip-path: polygon(0% 100%,50% 0,100% 100%,75% 100%,50% 100%,25% 100%);
    }

    50% {
        transform: rotateX(180deg);
    }

    100% {
        opacity: 1;
        transform: rotateX(360deg);
        border-radius: 1vw;
        clip-path: polygon(0% 100%,50% 0,100% 100%,75% 100%,50% 45%,25% 100%);
    }
}

.loading-logo__soft {
    position: absolute;
    left: 10vw;
    top: 12vw;
    width: 30vw;
    height: 30vw;
    transform: translateX(-80vw);
    clip-path: polygon(100% 0%,5% 40%,0% 45%,55% 60%,0% 100%,95% 60%,100% 55%,45% 40%);
    background-image: linear-gradient(135deg,#fff 30%,var(--blue) 80%);
    animation: show-s 1s forwards 1s cubic-bezier(0.68,-0.55,0.265,1.55);
}

@-webkit-keyframes show-s {
    0% {
        transform: translateX(-80vw);
    }

    100% {
        transform: translateY(0vw);
    }
}

@keyframes show-s {
    0% {
        transform: translateX(-80vw);
    }

    100% {
        transform: translateY(0vw);
    }
}